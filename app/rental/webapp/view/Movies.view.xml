<mvc:View controllerName="movierental.rental.controller.Movies"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
 <VBox> 
 <Button text="{i18n>tableRentals}" press="onNavToRentals"/>
  <Title text="{i18n>tableTitle}" />
  <Table id="moviesTable" items="{/Movies}">
    <columns>
      <Column><Text text="{i18n>columnTitle}"/></Column>
      <Column><Text text="{i18n>columnGenre}"/></Column>
      <Column><Text text="{i18n>columnStock}"/></Column>
      <Column><Text text="{i18n>columnRentedCount}"/></Column>
      <Column><Text text="{i18n>columnActions}"/></Column>
    </columns>
    <items>
      <ColumnListItem>
        <cells>
          <Text text="{title}"/>
          <Text text="{genre}"/>
          <Text text="{stock}"/>
          <Text text="{rentedCount}"/>
          <Button text="{i18n>buttonRent}" press="onOpenRentalForm"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</VBox>
</mvc:View>