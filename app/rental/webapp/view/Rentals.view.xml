<mvc:View
    controllerName="movierental.rental.controller.Rentals"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>rentalsTitle}" level="H1"/>
                </f:heading>
                <f:actions>
                    <Button
                        text="{i18n>moviesTitle}"
                        press="onNavToMovies"
                        icon="sap-icon://video"
                        type="Emphasized"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <f:GridList
                id="rentalsGrid"
                width="75%"
                items="{/Rentals}"
                growing="true"
                growingThreshold="20"
                class="sapUiResponsiveMargin centeredGrid customGridGap"
            >
                <f:GridListItem>
                    <VBox
                        alignItems="Center"
                        width="220px"
                        class="cardHoverEffect sapUiLargeMargin"
                    >
                        <Image
                            src="{movie/img}"
                            width="120px"
                            height="160px"
                            class="sapUiTinyMarginBottom"
                        />
                        <Title
                            text="{movie/title}"
                            level="H3"
                            class="sapUiTinyMarginBottom"
                        />
                        <Text
                            text="{i18n>labelClient}: {customer}"
                            class="sapUiTinyMarginBottom"
                        />
                        <Text
                            text="{i18n>amount}: {quantity}"
                            class="sapUiTinyMarginBottom"
                        />
                        <Text
                            text="{i18n>date}: {rentalDate}"
                            class="sapUiTinyMarginBottom"
                        />
                        <ObjectStatus
                            text="{i18n>returned}: {returned}"
                            state="{= ${returned} ? 'Success' : 'Warning' }"
                            class="sapUiTinyMarginBottom"
                        />
                        <Button
                            text="{i18n>returnButton}"
                            press="onReturnRental"
                            type="Emphasized"
                            class="sapUiTinyMarginTop"
                        />
                    </VBox>
                </f:GridListItem>
            </f:GridList>
        </f:content>
    </f:DynamicPage>
</mvc:View>